{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Livres en Retard</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date de prêt</th>
                <th>Date de retour prévue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
            <tr>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.dateEmprunt|date('d/m/Y') }}</td>
                <td>{{ livre.dateRetourPrevue|date('d/m/Y') }}</td>
                <td>
                    <form method="post" action="{{ path('livre_restituer', { id: livre.id }) }}">
                        <button type="submit" class="btn btn-success">Marquer comme Restitué</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
